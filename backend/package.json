{
  "name": "descuentapp-backend",
  "version": "1.0.0",
  "description": "Backend API para DescuentApp - Clean Architecture & DDD",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.json src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:validate": "prisma validate --config prisma.config.ts",
    "prisma:generate": "prisma generate --config prisma.config.ts",
    "prisma:migrate:dev": "prisma migrate dev --config prisma.config.ts",
    "prisma:migrate:deploy": "prisma migrate deploy --config prisma.config.ts",
    "prisma:studio": "prisma studio --config prisma.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "descuentapp",
    "clean-architecture",
    "ddd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.16.0",
    "jest": "^29.7.0",
    "prisma": "^7.2.0",
    "ts-jest": "29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
